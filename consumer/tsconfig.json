{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "build",
    "noUnusedLocals": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "target": "ES5",
    "module": "CommonJS"
  },
  "include": ["src/**/*"]
}